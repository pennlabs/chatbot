{
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": 0,
    "semi": "error",
    "no-console": 0,
    "no-multi-spaces": 0,
    "no-multiple-empty-lines": 0,
    "no-tabs": 0,
    "no-unexpected-multiline": 2,
    "no-unused-vars": 1,
    "no-var": 2,
    "padded-blocks": 0,
    "prefer-const": 2,
    "space-before-function-paren": ["error", "never"],
    "indent": ["error", 2, {
      "SwitchCase": 0
    }],
    "spaced-comment": 0
  }
}
